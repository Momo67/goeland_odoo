<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="thing_search_view">
            <field name="name">arbre.search</field>
            <field name="model">goeland.arbre</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Nom"/>
                    <field name="description" string="Description"/>
                    <filter name="isactive_filter" string="Actif"
                            domain="[('isactive', '=', 'True')]"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="arbre_form_view">
            <field name="name">arbre.form</field>
            <field name="model">goeland.arbre</field>
            <field name="arch" type="xml">
                <form string="Trees">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="tobechecked" string="To be checked"/>
                        </group>
                        <notebook>
                            <page string="Location" name="location">
                                <group>
                                    <field name="datereleve" string="Statement date"/>
                                    <field name="validation" string="Validation"/>
                                    <field name="isincada" string="Is in cadastre"/>
                                    <field name="secteur" string="Sector"/>
                                    <field name="emplacement" string="Location"/>
                                </group>
                            </page>
                            <page string="Classification" name="classification">
                                <group>
                                    <field name="genre_id" string="Genus"/>
                                    <field name="espece_id" string="Specie"/>
                                    <field name="cultivar_id" string="Cultivar"/>
                                    <field name="circonference" string="Circumference of the trunk" />
                                    <field name="hauteur" string="Height"/>
                                    <field name="diametrecouronne" string="Crown diameter"/>
                                </group>
                            </page>
                            <page string="Environment" name="environment">
                                <group>
                                    <tree string="Root environment">
                                        <group>
                                            <field name="envracinaire" string="Root environment"/>
                                            <field name="chkenvracinaire"/>
                                            <field name="envracinairerem"/>
                                        </group>
                                    </tree>
                                    <tree string="Substrat">
                                        <group>
                                            <field name="substrat" string="Substrat"/>
                                            <field name="chksubstrat" string=""/>
                                            <field name="substratrem" string=""/>
                                        </group>
                                    </tree>
                                    <tree string="Entourage">
                                        <label for="entourage" string="Entourage"/>
                                        <field name="entourage" placeholder="Entourage"/>
                                        <field name="chkentourage" placeholder="Entourage status"/>
                                        <field name="entouragerem" placeholder="Remark on entourage"/>
                                    </tree>
                                </group>
                            </page>
                            <page string="Health status" name="healthstatus">
                                <group>
                                    <field name="etatsanitairepied" string="Health status of foot"/>
                                    <field name="etatsanitairetronc" string="Health status of trunk"/>
                                    <field name="etatsanitairecouronne" string="Health status of crown"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="arbre_tree_view">
            <field name="name">arbre.tree</field>
            <field name="model">goeland.arbre</field>
            <field name="arch" type="xml">
                <tree string="Things">
                    <field name="name" string="Name"/>
                    <field name="description" string="Description"/>
                    <field name="isactive" string="Active"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="arbre_list_action">
            <field name="name">Trees</field>
            <field name="res_model">goeland.arbre</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context" eval="{'search_default_my_trees': 1}"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first tree</p>
            </field>
        </record>

        <menuitem id="arbres_menu" name="Trees" parent="thing_menu"
                  action="arbre_list_action"/>
    </data>
</openerp>
