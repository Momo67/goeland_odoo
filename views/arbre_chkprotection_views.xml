<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="arbre_chkprotection_search_view">
            <field name="name">arbre_chkprotection.search</field>
            <field name="model">goeland.arbre_chkprotection</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Protection check"/>
                    <filter name="isactive_filter" string="Active"
                            domain="[('isactive', '=', 'True')]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="arbre_chkprotection_list_action">
            <field name="name">Protection check</field>
            <field name="res_model">goeland.arbre_chkprotection</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context" eval="{'search_default_isactive_filter': 1}"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first protection check element</p>
            </field>
        </record>

        <menuitem id="arbres_chkprotection_menu" name="Protection check" parent="arbres_menu"
                  action="arbre_chkprotection_list_action"/>
    </data>
</openerp>
